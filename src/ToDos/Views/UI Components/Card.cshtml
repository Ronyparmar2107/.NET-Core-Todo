

<div class="card position-relative mb-5 " style="width: 18rem; box-shadow: 0px 5px 15px -1px black">
    @{
        if (Model.IsActive == false)
        {
            <div class="d-flex card-body position-absolute h-100 w-100 align-items-center"
                                 style="z-index: 1; background: rgba(255, 255, 255, 0.4);backdrop-filter: blur(1px);">

                <h3 class="text-success text-center ">Task completed!</h3>

            </div>
        }
    }
    
    <div class="card-body">
        @*<div class="position-absolute " ></div>*@
        <h5 class="card-title">@Model.Title</h5>
        <h6 class="badge bg-secondary rounded-pill card-subtitle mb-2 ">@Model.Category</h6>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Home" asp-action="Update" asp-route-id= "@Model.Id" class="btn btn-success" type="submit" >Complete</a>
        <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Discard</a>
    </div>
    
</div>
